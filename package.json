{
  "name": "taskplain",
  "version": "0.1.0",
  "description": "CLI for managing repository-native task files with deterministic workflows.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "taskplain": "dist/cli.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "lint": "node scripts/lint.mjs",
    "fix": "pnpm run lint:fix && pnpm run format:write",
    "lint:fix": "biome check --write .",
    "format": "node scripts/format.mjs --check",
    "format:write": "node scripts/format.mjs",
    "format:check": "node scripts/format.mjs --check",
    "verify": "pnpm run build && pnpm run typecheck && pnpm run lint && pnpm run test && pnpm run format",
    "test": "vitest run",
    "prepublishOnly": "pnpm run build && pnpm run typecheck && pnpm run test && pnpm run lint && pnpm run format",
    "publish:checked": "node scripts/publish.mjs"
  },
  "keywords": [
    "tasks",
    "cli",
    "workflow"
  ],
  "author": "Fabio Pelosin <fabiopelosin@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/fabiopelosin/taskplain.git"
  },
  "bugs": {
    "url": "https://github.com/fabiopelosin/taskplain/issues"
  },
  "homepage": "https://github.com/fabiopelosin/taskplain#readme",
  "type": "commonjs",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@10.20.0",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md",
    "LICENSE"
  ],
  "dependencies": {
    "@fastify/websocket": "^11.2.0",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "fastify": "^5.6.1",
    "fs-extra": "^11.3.2",
    "gray-matter": "^4.0.3",
    "open": "^10.2.0",
    "proper-lockfile": "^4.1.2",
    "remark-parse": "^11.0.0",
    "simple-git": "^3.29.0",
    "unified": "^11.0.5",
    "ws": "^8.18.3",
    "yaml": "^2.8.1",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.9.2",
    "@types/proper-lockfile": "^4.1.4",
    "@types/ws": "^8.18.1",
    "@vitest/coverage-v8": "^4.0.5",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.5"
  }
}
